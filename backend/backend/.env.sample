# ──────────────── Django/General ────────────────
DEBUG=1
SECRET_KEY=changeme-in-production
ALLOWED_HOSTS=*

# ──────────────── Database (Postgres) ────────────────
POSTGRES_DB=docuchat
POSTGRES_USER=docu
POSTGRES_PASSWORD=docu
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ──────────────── Redis (for Channels/WebSockets) ────────────────
REDIS_HOST=redis
REDIS_PORT=6379

# ──────────────── Auth / OIDC ────────────────
# Step 1 → use mock to skip Keycloak, document this in DECISIONS.md
OIDC_VERIFY=mock
OIDC_CLIENT_ID=docuchat
OIDC_ISSUER_URL=http://keycloak:8080/realms/docuchat
OIDC_AUDIENCE=docuchat

# ──────────────── LLM / RAG ────────────────
# Example: use OpenAI, Anthropic, or anything else
LLM_PROVIDER=openai
OPENAI_API_KEY =your-api-key-here

# ──────────────── Other ────────────────
EMBEDDING_MODEL=text-embedding-3-small